<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            >

            <me.inrush.widget.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:contentDescription="@string/app_name"
                android:elevation="6dp"
                android:src="@drawable/placeholder_disk_play_program"/>

            <me.inrush.widget.CircleImageView
                android:id="@+id/iv_thumb"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:elevation="6dp"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_progress_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="12sp"
                    tools:text="0.01"/>

                <SeekBar
                    android:id="@+id/sb_progress"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:progressBackgroundTint="#999"
                    />

                <TextView
                    android:id="@+id/tv_total_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="12sp"
                    tools:text="0.01"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_play_btn_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:elevation="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_mode"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_media_btn"
                    android:contentDescription="@string/app_name"
                    android:elevation="4dp"
                    android:padding="10dp"
                    android:src="@drawable/loop"/>

                <ImageView
                    android:id="@+id/iv_pre"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_media_btn"
                    android:contentDescription="@string/app_name"
                    android:elevation="4dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_skip_previous_white_24dp"/>

                <ImageView
                    android:id="@+id/iv_play"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_media_btn"
                    android:contentDescription="@string/app_name"
                    android:elevation="4dp"
                    android:padding="10dp"

                    android:src="@drawable/bg_media_btn_selector"/>


                <ImageView
                    android:id="@+id/iv_next"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_media_btn"
                    android:contentDescription="@string/app_name"
                    android:elevation="4dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_skip_next_white_24dp"/>

                <ImageView
                    android:id="@+id/iv_play_list"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_media_btn"
                    android:contentDescription="@string/app_name"
                    android:elevation="4dp"
                    android:padding="5dp"
                    android:src="@drawable/playbar_btn_playlist"
                    android:tint="#fff"/>

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>


</LinearLayout>